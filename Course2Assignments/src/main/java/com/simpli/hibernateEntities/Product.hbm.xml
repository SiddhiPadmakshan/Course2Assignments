<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.simpli.hibernateEntities">
    <class name="Product" table="product">
        <id name="ID" column="ID">
            <generator class="increment"/>
        </id>
        <property name="name" type="string" column="PRODUCT_NAME"/>
        <property name="price" type="big_decimal" column="PRODUCT_PRICE"/>
        <property name="dateAdded" type="timestamp" column="DATE_ADDED"/>
    </class>
</hibernate-mapping>